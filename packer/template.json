{
 "builders": [
    {
      "access_key": "{{user `aws_access_key`}}",
      "ami_name": "{{ user `ami_name`}}",
      "instance_type": "t3.micro",
      "region": "{{user `region`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "source_ami": "{{user `base_ami_id`}}",
      "ssh_username": "ubuntu",
      "tags": {
        "OS_Version": "Ubuntu"
      },
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/shutdown-apt-services.sh"
    },
    {
      "type": "file",
      "source": "./scripts/conf/mongod.conf",
      "destination": "/tmp/mongod.conf"
    },
    {
      "type": "file",
      "source": "./scripts/mount-ebs-volumes.sh",
      "destination": "/tmp/mount-ebs-volumes.sh"
    },
    {
      "type": "shell",
      "environment_vars": ["MONGO_VERSION={{user `mongo_version`}}"],
      "script": "./scripts/provisioning.sh",
      "pause_before": "10s"
    }
  ]
}
